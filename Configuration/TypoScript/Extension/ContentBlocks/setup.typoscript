# extend TypoScript for content blocks to include custom layouts and partials
lib.contentBlock {
    layoutRootPaths {
        0 = EXT:bootstrap_package/Resources/Private/Layouts/ContentElements/
        10 = EXT:sitepackage/Resources/Private/Layouts/ContentElements/
    }
    partialRootPaths {
        0 = EXT:bootstrap_package/Resources/Private/Partials/ContentElements/
        10 = EXT:sitepackage/Resources/Private/Partials/ContentElements/
    }
    settings.responsiveimages < lib.contentElement.settings.responsiveimages
}
